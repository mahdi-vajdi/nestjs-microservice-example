{
  "name": "nestjs-microservice-example",
  "author": "Mahdi Vajdi",
  "description": "",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build --all",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "start": "nest start",
    "prestart:dev": "rm -rf dist",
    "start:dev": "concurrently -k -c \"cyan,magenta\" \"npm:start:dev:gateway\" \"npm:start:dev:identity\"",
    "start:dev:gateway": "nest start gateway-service --watch",
    "start:dev:identity": "nest start identity-service --watch",
    "start:dev:docker": "docker compose --env-file .env -f docker/docker-compose.yml -f docker/docker-compose.local.yml up -d",
    "start:prod:gateway": "node dist/apps/gateway-service/main",
    "start:prod:identity": "node dist/apps/identity-service/main"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/identity(|/.*)$": "<rootDir>/libs/identity/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
  },
  "dependencies": {
    "@grpc/grpc-js": "1.14.1",
    "@grpc/proto-loader": "0.8.0",
    "@nestjs/common": "11.1.9",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.9",
    "@nestjs/cqrs": "11.0.3",
    "@nestjs/microservices": "11.1.9",
    "@nestjs/platform-express": "11.1.9",
    "@nestjs/schedule": "6.1.0",
    "@nestjs/swagger": "11.2.3",
    "@nestjs/typeorm": "11.0.0",
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "nats": "2.29.3",
    "pg": "8.16.3",
    "rxjs": "7.8.2",
    "typeorm": "0.3.27",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@types/bcrypt": "6.0.0",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "concurrently": "9.2.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.5.0",
    "jest": "30.2.0",
    "prettier": "3.7.3",
    "supertest": "7.1.4",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1"
  }
}
